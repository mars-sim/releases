<?xml version="1.0" encoding="UTF-8"?>

<simulation-configuration
	xmlns="http://mars-sim.sourceforge.net/simulation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://mars-sim.sourceforge.net/simulation schema/simulation.xsd">

	<!-- Time related configuration -->
	<time-configuration>

		<!-- Simulation time ratio to real time -->
		<!-- Value must be positive number and cannot be zero -->
		<!-- Default: 1000.0 -->
		<time-ratio value="1000.0" />
		
		<!-- Earth start date/time -->
		<!-- "MM/dd/yyyy hh:mm:ss" format -->
		<!-- Default: 09/30/2043 00:00:00 -->
		<earth-start-date-time value="09/30/2043 00:00:00" />
		
		<!-- Mars start date/time -->
		<!-- (See time.txt) -->
		<!-- "orbit-month-sol:millisol" format -->
		<!-- Default: 15-Adir-01:000.000 -->
		<mars-start-date-time value="15-Adir-01:000.000" />
		
	</time-configuration>	

</simulation-configuration>